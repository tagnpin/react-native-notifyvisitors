<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rating_v1_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">

            <RelativeLayout
                android:id="@+id/icon_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/rating_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingBottom="1dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="6dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="6dp"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/small_icon"
                    android:layout_width="18.2dp"
                    android:layout_height="18.2dp"
                    android:layout_alignBottom="@id/rating_icon"
                    android:layout_alignRight="@id/rating_icon"
                    android:layout_alignEnd="@id/rating_icon"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/notification_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/rating_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/rating_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:singleLine="true"/>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/rating_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/rating_bigImg"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/rating_v1_star_body"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <Button
                    android:id="@+id/rating_star1"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:textColor="@android:color/darker_gray"
                    android:textAlignment="center"
                    android:background="@android:color/transparent"
                    android:text="@string/nv_push_rating_type" />

                <Button
                    android:id="@+id/rating_star2"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:textColor="@android:color/darker_gray"
                    android:background="@android:color/transparent"
                    android:text="@string/nv_push_rating_type" />

                <Button
                    android:id="@+id/rating_star3"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:textColor="@android:color/darker_gray"
                    android:background="@android:color/transparent"
                    android:text="@string/nv_push_rating_type" />

                <Button
                    android:id="@+id/rating_star4"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:textColor="@android:color/darker_gray"
                    android:background="@android:color/transparent"
                    android:text="@string/nv_push_rating_type" />

                <Button
                    android:id="@+id/rating_star5"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:background="@android:color/transparent"
                    android:text="@string/nv_push_rating_type" />

                <Button
                    android:id="@+id/rating_star6"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:background="@android:color/transparent"
                    android:text="@string/nv_push_rating_type"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/rating_star7"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:background="@android:color/transparent"
                    android:text="@string/nv_push_rating_type"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/rating_star8"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:background="@android:color/transparent"
                    android:text="@string/nv_push_rating_type"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/rating_star9"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:background="@android:color/transparent"
                    android:text="@string/nv_push_rating_type"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/rating_star10"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30sp"
                    android:background="@android:color/transparent"
                    android:text="@string/nv_push_rating_type"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rating_v1_submit_margin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/rating_submit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_gravity="bottom"
        android:text="Submit"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

</LinearLayout>
